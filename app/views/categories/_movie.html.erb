<% @movies.each do |movie| %>
  <%= link_to movie_path(movie) do %>
    <div class="card-movie">
      <img src="<%= movie.image_url %>" alt="">
      <div class="movie-body">
        <h2><%= movie.title %></h2>
        <div class="movie-body-rating">
          <i class="fa-solid fa-star"></i>
          <%= movie.rating %>
          <p>(<%=movie.number_of_votes %> votes)</p>
        </div>
        <div class="movie-body-category">
          <%= render 'shared/categoryTag', locals: { categories: @categories } %>
        </div>
        <h3>Description</h3>
        <%= movie.description %>
      </div>
    </div>
  <% end %>
<% end %>
